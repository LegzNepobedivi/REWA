<% layout('layouts/boilerplate') %>

<link rel="stylesheet" href="/stylesheets/style.css" type="text/css" />

<div class="mb-3 mt-3">
  <a class="button btn dugme" type="button" href="/stanovi">
    <i class="bi bi-arrow-left"> </i>Nazad
  </a>
</div>

<div class="mb-3">
  <h1 class="mb-3"><%= stan.title %></h1>
  <h4 class="mb-3">ID: <%= stan._id %></h4>

  <div class="row">
    <div class="col-3">
      <h6 class="text-uppercase">Cena</h6>
      <p><i class="bi bi-currency-euro"> </i><%= stan.price %></p>
    </div>
    <div class="col-3">
      <h6 class="text-uppercase">Povr≈°ina</h6>
      <p><%= stan.areaSize %></p>
    </div>
    <div class="col-3">
      <h6 class="text-uppercase">Struktura</h6>
      <p><%= stan.structure %></p>
    </div>
    <div class="col-3">
      <h6 class="text-uppercase">Kupatilo</h6>
      <p><%= stan.toilets %></p>
    </div>
  </div>

  <!--Agent-->
  <div class="row mb-3">
    <div class="col-lg-6">
      <div class="p-1">
        <div class="p-4 bg-body border rounded-3 row">
          <div class="col-3">
            <img
              src="/img/betterIcon.png"
              alt=""
              width="80px"
              height="80px"
              style="color: #160e3f"
            />
          </div>
          <div class="col-9">
            <p class="fs-5">
              Agent: <%= stan.agentName %> <%= stan.agentNumber %>
            </p>
            <div class="btn-group">
              <a
                class="btn btn-sm btn-outline-light dugme"
                type="button"
                href="tel:<%= stan.agentNumber %>"
              >
                <i class="bi bi-telephone-fill"></i>
              </a>
              <a
                class="btn btn-sm btn-outline-light dugmeDrugo text-uppercase"
                type="button"
                href="tel:<%= stan.agentNumber %>"
              >
                Pozovi
              </a>
            </div>
            <div class="btn-group">
              <a
                class="btn btn-sm btn-outline-light dugme"
                type="button"
                href="mailto:<%= stan.agentEmail %>"
              >
                <i class="bi bi-envelope"></i>
              </a>
              <a
                class="btn btn-sm btn-outline-light dugmeDrugo text-uppercase"
                type="button"
                href="mailto:<%= stan.agentEmail %>"
              >
                Posalji mejl
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!--Carousel-->
  <div id="carouselExampleIndicators" class="carousel slide">
    <div class="carousel-indicators">
      <% stan.images.forEach((img, i) => {%>
      <button
        type="button"
        data-bs-target="#carouselExampleIndicators"
        data-bs-slide-to="<%= i %>"
        class="<%= i === 0 ? 'active' : '' %>"
        aria-current="true"
        aria-label="Slide <%= i+1 %>"
      ></button>
      <% }); %>
    </div>

    <div class="carousel-inner">
      <% stan.images.forEach((img, i) => {%>
      <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
        <img
          crossorigin="anonymous"
          src="<%= img.url %>"
          class="slika d-block w-100 img-fluid"
          alt="..."
        />
      </div>
      <% }); %>
    </div>

    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#carouselExampleIndicators"
      data-bs-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#carouselExampleIndicators"
      data-bs-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <!--YouTube-->
  <% if(stan.videoLink.length > 7) {%>
  <div class="mt-3">
    <div class="">
      <iframe
        width="100%"
        height="315"
        src="<%= stan.videoLink %>"
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        allowfullscreen
      ></iframe>
    </div>
  </div>
  <% } %>
</div>
